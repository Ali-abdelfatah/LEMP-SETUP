[global]
pid = /run/php-fpm/php-fpm.pid
error_log = /var/log/php-fpm/error.log

[www]
user = nginx
group = nginx
listen = /run/php-fpm/www.sock
listen.owner = nginx
listen.group = nginx
listen.mode = 0660

pm = dynamic
pm.max_children = 75       ; Adjusted for higher traffic
pm.start_servers = 10      ; Increased to handle load
pm.min_spare_servers = 5
pm.max_spare_servers = 35
pm.max_requests = 500

env[HOSTNAME] = $HOSTNAME
env[PATH] = /usr/local/bin:/usr/bin:/bin
env[TMP] = /tmp
